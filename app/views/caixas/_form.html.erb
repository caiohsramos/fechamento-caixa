<%= form_with(model: caixa, local: true) do |form| %>
  <% if caixa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(caixa.errors.count, "erros") %>
        <%= "proibiu" if caixa.errors.count == 1 %>
        <%= "proibiram" if caixa.errors.count != 1 %>
        esse caixa de ser salvo:
      </h2>

      <ul>
      <% caixa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :data %>
    <%= form.date_field :data, id: :caixa_data, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :nome %>
    <%= form.text_field :nome, id: :caixa_nome, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :dinheiro %>
    <%= form.number_field :dinheiro, id: :caixa_dinheiro, step: :any, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :troco_final %>
    <%= form.number_field :troco_final, id: :caixa_troco_final, step: :any, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :troco_inicial %>
    <%= form.number_field :troco_inicial, id: :caixa_troco_inicial, step: :any, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :cartao %>
    <%= form.number_field :cartao, id: :caixa_cartao, step: :any, class: "form-control" %>
  </div>



  <div class="actions">
    <%= form.submit "Salvar Caixa", class: "btn btn-success" %>
  </div>
<% end %>



<h1>Despesas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @despesas.each do |despesa| %>
      <tr>
        <td><%= despesa.nome %></td>
        <td><%= despesa.valor %></td>
        <td><%= link_to 'Show', caixa_despesa_path(despesa.caixa, despesa) %></td>
        <td><%= link_to 'Edit', edit_caixa_despesa_path(despesa.caixa, despesa) %></td>
        <td><%= link_to 'Destroy', caixa_despesa_path(despesa.caixa, despesa), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Despesa', new_caixa_despesa_path %>

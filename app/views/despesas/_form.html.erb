<%= form_for([caixa,despesa]) do |form| %>
  <% if despesa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(despesa.errors.count, "erros") %>
        <%= "proibiu" if despesa.errors.count == 1 %>
        <%= "proibiram" if despesa.errors.count != 1 %>
         essa despesa de ser salva:
      </h2>

      <ul>
      <% despesa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :nome %>
    <%= form.text_area :nome, id: :despesa_nome, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :valor %>
    <%= form.number_field :valor, id: :despesa_valor, step: :any, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Salvar Despesa", class: "btn btn-success" %>
  </div>
<% end %>
